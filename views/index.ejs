                                                <option value='3'><%= lang.presets.name.vanilla %></option>
                                                <option value='4'><%= lang.presets.name.open %></option>
                                                <option value='5'><%= lang.presets.name.chaos %></option>
                                                <option value='6'><%= lang.presets.name.race %></option>
