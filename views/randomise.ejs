<!DOCTYPE html>
<html prefix="og: https://ogp.me/ns#" lang="en">
<head>
    <%- include("partials/head_common") %>

    <link rel="stylesheet" href="/css/randomise.css">

    <script src="/js/patcher.js"></script>
    <script src="/js/randomise.js"></script>
    <script src="/js/spoiler.js"></script>

    <meta property="og:title" content="Generate Seed">
    <link rel="canonical" href="https://gs2randomiser.com/randomise.html">
    <title>GS2 Randomiser</title>
</head>

<body>
    <% locals.path = "/randomise" %>
    <%- include("partials/top_nav") %>

    <main class="container-fluid">
        <div class="row mt-3 mx-lg-5">
            <div class="col-12 mx-lg-3 mb-2">
                <center>
                    <a href="./index.html"><img class="logo" src="/img/gstlar-logo.webp" alt="Randomiser logo"></a>
                </center>
            </div>

            <div class="col-12 mb-4 px-lg-5">
                <div class="card mt-4">
                    <h2 class="card-header"><%= lang.randomised.header_settings %></h2>
                    <div class="card-body">
                        <div class="row px-lg-5 my-2">
                            <div class="col-12 my-1">
                                <div class="form-check form-switch">
                                    <input class="form-check-input cache-setting" type="checkbox" id="inp-qol-autorun">
                                    <label class="form-check-label"><%= lang.randomised.setting_autorun %></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-4 px-lg-5">
                <div class="card mt-4">
                    <h2 class="card-header"><%= lang.randomised.header_download %></h2>
                    <div class="card-body">
                        <div class="row px-lg-5 my-2" id="div-rom">
                            <div class="col-12 my-3">
                                <div class="card">
                                    <h3 class="card-header"><%= lang.randomised.select_rom %></h3>
                                    <div class="card-body py-3 px-lg-5">
                                        <input type="file" class="form-control" id="inp-rom">
                                        <p class="ms-2 mt-1 mb-0 text-danger d-none" id="err-rom"><%= lang.randomised.invalid_rom %></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row px-lg-5 mt-2 mb-4" id="div-result">
                            <div class="col-12 col-lg-6 mb-1">
                                <div class="d-block">
                                    <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" title="<%= lang.randomised.no_rom %>">
                                        <button class="btn btn-primary me-3" id="btn-patch" disabled>
                                            <%= lang.randomised.btn_patch %>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 mb-1">
                                <div class="d-block">
                                    <div class="ms-3 d-inline-block" id="div-spinner">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        <%= lang.randomised.randomising %>
                                    </div>
                                    <a type="button" class="btn btn-primary float-end" id="btn-log" disabled>
                                        <%= lang.randomised.download_log %>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div id="div-log">
                            <hr>
                            <div class="col-12 px-lg-5 py-3">
                                <div class="card">
                                    <h3 class="card-header" data-bs-toggle="collapse" data-bs-target="#card-toggle">
                                        <i class="bi bi-caret-down-fill me-2 rot-base" id="caret-log"></i> 
                                        <%= lang.randomised.header_log %>
                                    </h3>
                                    <div class="collapse" id="card-toggle">
                                        <div class="card-body" id="card-log">
                                            <ul class="nav nav-tabs">
                                                <li class="nav-item"><a class="nav-link active" data-bs-target="#tab-spheres"><%= lang.randomised.log.tab_spheres %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-indra"><%= lang.randomised.log.tab_indra %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-osenia"><%= lang.randomised.log.tab_osenia %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-gondowan"><%= lang.randomised.log.tab_gondowan %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-angara"><%= lang.randomised.log.tab_angara %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-eastsea"><%= lang.randomised.log.tab_eastern_sea %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-westsea"><%= lang.randomised.log.tab_western_sea %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-prox"><%= lang.randomised.log.tab_prox %></a></li>
                                                <li class="nav-item"><a class="nav-link" data-bs-target="#tab-search"><%= lang.randomised.log.tab_search %></a></li>
                                            </ul>
                                            <div class="tab-content mt-1"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>